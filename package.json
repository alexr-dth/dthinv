{
  "name": "inventory-client",
  "private": true,
  "type": "module",
  "scripts": {
    "json-server": "json-server --watch db.json --port 5011",
    "dev": "vite --port 5010",
    "combine": "echo 'BEGIN;' > supabase/combined.sql && cat supabase/migrations/* >> supabase/combined.sql && echo 'COMMIT;' >> supabase/combined.sql",
    "start": "vite --port 5010",
    "build": "vite build --mode production",
    "serve": "vite preview",
    "test": "vitest run",
    "lint": "eslint",
    "format": "prettier",
    "check": "prettier --write . && eslint --fix",
    "pm2-json-server": "pm2 start json-server --name invjsonserver -- -p 5011 db.json",
    "pm2-serve": "pm2 start serve --name invserve -- -s build -l 3000",
    "pm2-ngrok": "pm2 start ngrok --name invngrok -- http 3000"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-devtools": "^0.2.2",
    "@tanstack/react-query": "^5.66.5",
    "@tanstack/react-query-devtools": "^5.84.2",
    "@tanstack/react-router": "^1.130.2",
    "@tanstack/react-router-devtools": "^1.131.5",
    "@tanstack/router-plugin": "^1.121.2",
    "axios": "^1.11.0",
    "i18next": "^25.4.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "jsbarcode": "^3.12.1",
    "jspdf": "^3.0.2",
    "jspdf-autotable": "^5.0.2",
    "lucide": "^0.541.0",
    "lucide-react": "^0.541.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^15.7.3",
    "react-sortablejs": "^6.1.4",
    "sortablejs": "^1.15.6",
    "tailwindcss": "^4.0.6"
  },
  "devDependencies": {
    "@tanstack/eslint-config": "^0.3.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/sortablejs": "^1.15.8",
    "@vitejs/plugin-basic-ssl": "^2.1.0",
    "@vitejs/plugin-react": "^4.3.4",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "supabase": "^2.40.7",
    "typescript": "^5.7.2",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^3.0.5",
    "web-vitals": "^4.2.4"
  }
}
